{# templates/defaults/loginPageTemplate.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Inside Therapeutics{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card" style="width: 18rem; margin: 5rem auto; box-shadow: 0 0 10px rgba(0, 0, 0, .4);">
                    <div class="card-header" style="background: transparent center / cover no-repeat url(./images/signup_bg.webp); color: #FFFFFF">
                        <h1 class="display-1 mt-4 mb-4">Login</h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="mt-2 mb-2">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form action="{{ path('login_page') }}" method="post">
                            <div class="mt-2 mb-2">
                                <input type="text" class="form-control" id="username" name="_username" placeholder="Email" value="{{ lastUsername }}"/>
                            </div>
                            <div class="mt-2 mb-2">
                                <input type="password" class="form-control" id="password" name="_password" placeholder="Password"/>
                            </div>
                            <div class="mt-2 mb-2">
                                <input type="checkbox" id="rememberMe" class="form-check-input" name="_remember_me" checked/>
                                <label class="form-check-label" for="rememberMe">
                                    Keep me logged in
                                </label>
                            </div>
                            <div class="mt-2 mb-2 text-center">
                                <button type="submit" class="btn btn-outline-primary">Login</button>
                            </div>
                        </form>
                        <p class="text-center mt-2 mb-2">
                            Don't have an account yet? <a href="{{ path('signup_page') }}">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}